{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
<div class="ht__bradcaump__area bg-image--5">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="bradcaump__inner text-center">
                        	<h2 class="bradcaump-title">Login</h2>
                            <nav class="bradcaump-content">
                              <a class="breadcrumb_item" href="/">Home</a>
                              <span class="brd-separetor">/</span>
                              <a class="breadcrumb_item active" href="/login">login</a>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
  <section class="my_account_area pt--80 pb--55 bg--white">
       <div class="container">
				<div class="row">
					<div class="col-lg-6 col-12">
						<div class="my__account__wrapper">
							<h3 class="account__title">Login</h3>


                    <form method="post">
                        


                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}

                            {% if app.user %}
                                <div class="checkbox mb-3">You are logged in as
                                    {{ app.user.username }},
                                    <a href="{{ path('app_logout') }}">Logout</a>
                                {% endif %}
                               <div class="account__form">
									<div class="input__box">
										<label>Email address <span>*</span></label>
										<input type="email" value="{{ last_username }}" name="_username" id="inputEmail" placeholder="Email" required autofocus>
									</div>
									<div class="input__box">
										<label>Password<span>*</span></label>
										<input class="input__box" type="password" name="_password" id="inputPassword" class="input__box" placeholder="Password" required>
									</div>

                               
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">


                                <button class="btnSecond" type="submit">
                                    Sign in
                                </button>
                            
</div>
                        </form>
                       <h4> Don't have an account? <h3>
                         <a class="btnSecond" href="{{ path('user_new') }}">Sign Up</a>
                    </div>
                </div>
                </div>
            </div>
        </div>
    </div>
    </section>

{% endblock %}
