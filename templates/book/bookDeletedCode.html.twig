    <div class="row" style="margin-top:30px;">
  {% for book in books %}
  <div class="col-md-4">
  <div class="card border-info mb-3" style="max-width: 20rem;">
  <div class="card-header"> <div style="text-align: center;"> <a href="{{ path('book_show', {'id': book.id}) }}" class="btn btn-info btn-block"> {{ book.name }}</a>
</div> </div>
  <div class="card-body">
    <h4 class="card-title">{{ book.name }}</h4>
    <p class="card-text"> 
             <ul class="list-group list-group-flush">
                <li class="list-group-item"> <strong> Author: </strong>{{ book.author }}</li>
                <li class="list-group-item"> <strong>Genre: </strong> {{ book.genre }} </li>
                <li class="list-group-item"><div style="text-align: center;"> <button type="button" class="btn btn-outline-info"> {{ book.action }} </button> </div></li>
            </ul>
            </div>
            <div class="card-header"> <div style="text-align: right;"> <a href="{{ path('book_edit', {'id': book.id}) }}"class="btn btn-outline-warning">Edit</a>
 {{ include('book/_delete_form.html.twig') }} </div></div>
  
</div>
</div>
 {% else %}
       <h1> no books found </h1>
            
        {% endfor %}
</div>

