{% extends 'genre/index.html.twig' %}

{% block title %}My Books{% endblock %}

{% block page %}
    
    

{% if books %}
     <div class="cart-main-area section-padding--lg bg--white">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 col-sm-12 ol-lg-12">
                        <form action="#">               
                            <div class="table-content wnro__table table-responsive">
                                <table>
                                    <thead>
                                        <tr class="title-top">
                                            <th class="product-thumbnail">Book Image</th>
                                            <th class="product-name">Book name</th>
                                            <th class="product-price">Price</th>
                                            
                                        </tr>
                                    </thead>
                                    <tbody>
                                        
                                           
                                        <tr>
                                        
                                        {% for book in books %} 
                                         <td class="product-thumbnail">
                                            {% for im in imgs %}
		        					
                          {% if im.book == book.id %} 
						  <a href="/book/{{ book.id }}">	  <img style='height:100px; width:80px' src="{{ asset('/uploads/' ~ im.donne)}}" alt="{{book.name}}">
                    
                       {% endif %}
                       {% endfor %}
                       </a></td>
                                         
                                            <td class="product-name"><a href="/book/{{ book.id }}">{{ book.name }}</a></td>
                                            
                                           
                                            <td class="product-subtotal">{{ book.price  }}  TND</td>
                                           
                                        </tr>
                                       
                                        {% endfor %}
                                        
                                    </tbody>
                                </table>
                            </div>
                        </form> 
                       
                    </div>
                </div>
                </div>
                </div>
     {% else %}   
     <h3> no books </h3>
     {% endif %}      

    
{% endblock %}
